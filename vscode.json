{
  "editor.fontFamily": "Lilex, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "window.zoomLevel": 0.5,
  "editor.fontSize": 15,
  "workbench.list.horizontalScrolling": true,
  "editor.fontWeight": 400,
  "editor.lineHeight": 24,
  "editor.letterSpacing": 0,
  "editor.wordWrap": "on",
  "editor.colorDecorators": true,
  "workbench.sideBar.location": "left",
  "editor.renderWhitespace": "none",
  "editor.rulers": [120, 150],
  "workbench.startupEditor": "none",
  "extensions.ignoreRecommendations": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.next": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "packages/*/node_modules": true
  },
  "workbench.editor.tabCloseButton": "off",
  "editor.snippetSuggestions": "top",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false
  },
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "editor.minimap.enabled": false,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "eslint.alwaysShowStatus": true,
  "window.titleBarStyle": "custom",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
    // "markdown": true
  },
  // https://code.visualstudio.com/docs/getstarted/settings#_language-specific-editor-settings
  "editor.insertSpaces": true,
  // "editor.tabSize": 3,
  // "[rust]": {
  //   "editor.tabSize": 4,
  // },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "rust-client.channel": "stable",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "phase",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "omnisharp.useGlobalMono": "always",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "svelte.enable-ts-plugin": true,
  "debug.onTaskErrors": "debugAnyway",
  "debug.javascript.autoAttachFilter": "onlyWithFlag",
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "workbench.iconTheme": "symbols",
  "redhat.telemetry.enabled": false,
  "[postcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.largeFileOptimizations": false,
  "editor.bracketPairColorization.enabled": false,
  "js/ts.implicitProjectConfig.experimentalDecorators": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "svelte.plugin.svelte.note-new-transformation": false,
  "terminal.integrated.defaultProfile.osx": "fish",
  "editor.accessibilitySupport": "off",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.tabSize": 3,
  "[python]": {
    "editor.formatOnType": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "cmake.configureOnOpen": true,
  "C_Cpp.intelliSenseEngineFallback": "enabled",
  "workbench.editor.empty.hint": "hidden",
  "nxConsole.showNodeVersionOnStartup": false,
  "workbench.editor.tabActionCloseVisibility": false,
  // "editor.lineNumbers": "relative",
  // "editor.glyphMargin": false,
  "editor.folding": true,
  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Atom One Dark",
  "workbench.preferredLightColorTheme": "Atom One Light",
  "gitlens.views.commitDetails.files.layout": "list",
  "gitlens.views.searchAndCompare.files.layout": "tree",
  "symbols.hidesExplorerArrows": false,
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "workbench.colorTheme": "Atom One Light",
  "files.autoSave": "off",
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "git.openRepositoryInParentFolders": "never",
  "jest.debugMode": true,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.wrapTabs": false,
  // "typescript.inlayHints.variableTypes.enabled": true,
  // "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  // "javascript.inlayHints.parameterTypes.enabled": true,
  // "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  // "javascript.inlayHints.variableTypes.enabled": true,
  // "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  // "typescript.inlayHints.parameterTypes.enabled": true,
  // "typescript.inlayHints.propertyDeclarationTypes.enabled": true,

  // Required to install extensions on proffesional laptops behind VPN
  // Ref: https://stackoverflow.com/questions/36506539/how-do-i-get-visual-studio-code-to-trust-our-self-signed-proxy-certificate
  // https://github.com/Microsoft/vscode/issues/3492
  // Somehow it didn't work for me, and I had to disable VPN to make it work
  // "http.proxyStrictSSL": true,

  // Following is a hack, and should be removed, once these issues are resolved:
  // https://github.com/microsoft/vscode/issues/235959#issuecomment-2644217357
  // https://github.com/microsoft/vscode/issues/236625#event-16230959334
  "typescript.updateImportsOnPaste.enabled": false,
  "javascript.updateImportsOnPaste.enabled": false,
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "typescript.experimental.expandableHover": true,
  "typescript.tsserver.maxTsServerMemory": 8192,
  "typescript.tsserver.nodePath": "~/.local/share/nvm/v22.17.0/bin/node",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/app/src/i18n/**": true
  },
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  }
}
